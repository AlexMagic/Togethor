			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textSize="15sp"
			                android:layout_margin="5dp"
			                android:text="世界之窗"
			                android:textColor="@color/new_blue"/>
			            
			        </LinearLayout>
			        
			        
			    </RelativeLayout>
		    
