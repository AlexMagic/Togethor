<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_margin="10dp"
  	android:background="@color/gray_2">
  	
    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:layout_margin="10dp"
	        android:gravity="center">
	        
           <TextView android:id="@+id/title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="提示"
		        android:layout_gravity="center"
		        android:textSize="15sp"
		        android:textColor="@color/black"/>
	        
        
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="horizontal">
	    
	    
	    <View android:layout_width="0dp"
	        android:layout_height="0.5dp"
	        android:layout_weight="1"
	        android:background="@color/gray" />
	    
	    
	   
    
   </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:background="@color/white">
	        
           
	        <TextView 
	            android:id="@+id/tv_context"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="您需要继续完善你的资料吗?"
	   	        android:layout_margin="20dp"
	            android:textColor="@color/black"/>
        
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="horizontal">
	    
	    
	    <View android:layout_width="0dp"
	        android:layout_height="0.5dp"
	        android:layout_weight="1"
	        android:background="@color/gray" />
	    
	    
	   
    
   </LinearLayout>
   
    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center">
	        
        	<LinearLayout android:id="@+id/not_set_layout" 
        	    android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:gravity="center"
		        android:background="@drawable/bg_btn_1">   
	        
		      
		        <TextView android:id="@+id/tv_not_set"
		            android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="15sp"
	                android:text="先去看看"
	       	        android:layout_margin="10dp"
	                android:textColor="@color/black"/>
		        
		        
	        
	        </LinearLayout>
	        
        	
        	<View android:layout_width="0.5dp"
			        android:layout_height="40dp"
			        android:background="@color/gray" />
	        
        	<LinearLayout android:id="@+id/set_layout"
        	    android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:gravity="center"
		        android:background="@drawable/bg_btn_1">   
	        
		      
		        <TextView android:id="@+id/tv_set"
		            android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="15sp"
	                android:text="是的"
	       	        android:layout_margin="10dp"
	                android:textColor="@color/black"/>
	        
	        </LinearLayout>
	        
	    </LinearLayout>
    
    

</LinearLayout>
